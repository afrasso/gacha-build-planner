{
  "extends": ["next/core-web-vitals", "next/typescript", "plugin:perfectionist/recommended-natural-legacy"],
  "ignorePatterns": ["tailwind.config.ts"],
  "plugins": ["perfectionist"],
  "rules": {
    "perfectionist/sort-imports": [
      "error",
      {
        "internalPattern": ["@/**"]
      }
    ],
    "@typescript-eslint/no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ]
  }
}
