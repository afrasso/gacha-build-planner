{
  "preset": "ts-jest",
  "testEnvironment": "jest-environment-jsdom",
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/$1"
  },
  "transform": {
    "^.+\\.tsx?$": ["ts-jest", { "tsconfig": "<rootDir>/tsconfig.test.json" }]
  },
  "testPathIgnorePatterns": ["/node_modules/", "/.next/"]
}
